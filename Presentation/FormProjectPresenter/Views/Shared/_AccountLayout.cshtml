<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | FormProject</title>

    <link rel="icon" href="/briefcase.ico" referance="Online-work icons created by kmg design-Flaticon" type="/image/x-icon">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/toastr/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FormProjectPresenter.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/parsley.css" asp-append-version="true" />

    @RenderSection("cssSection", required: false)

</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData.ContainsKey("CameFromPostState"))
            {
                string message = (string)TempData["CameFromPostMessage"];
                bool success = (bool)TempData["CameFromPostState"];
                <script>
                    var optionsToastr = {
                        message: '@message',
                        success: @success.ToString().ToLower()
                    };
                </script>
                TempData.Remove("CameFromPostState");
                TempData.Remove("CameFromPostMessage");
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FormProject - Yunus Emre Koşar
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/toastr/toastr.js" asp-append-version="true"></script>
    <script src="~/toastr/toastrNotifications.js" asp-append-version="true"></script>
    <script src="~/js/parsleyjs.js" asp-append-version="true"></script>

    @RenderSection("jsSection", required: false)
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
