<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FormProjectPresenter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/toastr/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FormProjectPresenter.styles.css" asp-append-version="true" />
    @RenderSection("cssSection", required: false)

</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData.ContainsKey("ComeFromPostState"))
            {
                string message = (string)TempData["ComeFromPostMessage"];
                bool success = (bool)TempData["ComeFromPostState"];
                <script>
                    var optionsToastr = {
                        message: '@message',
                        success: @success.ToString().ToLower()
                                                                                                                                                                };
                </script>
                TempData.Remove("ComeFromPostState");
                TempData.Remove("ComeFromPostMessage");
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/toastr/toastr.js" asp-append-version="true"></script>
    <script src="~/toastr/toastrNotifications.js" asp-append-version="true"></script>

    @RenderSection("jsSection", required: false)
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
